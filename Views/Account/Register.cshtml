@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">Register</h2>

<h4 class="text-danger text-center">@ViewBag.Warning</h4>


@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container" style="max-width:400px; border: 1px solid #dddddd; border-radius:10px; margin-top: 20px;">
        <div class="row text-center" style="margin-top:20px;">
            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.Username, "Username") (Required)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row text-center">

            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.Email) (Required)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="row text-center">

            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.Password) (Required)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row text-center">

            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password") (Required)
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row text-center">

            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.Address.StreetNumberName, "Street Address") (Required)
                @Html.TextBoxFor(m => m.Address.StreetNumberName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address.StreetNumberName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row text-center">

            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.Address.PostalCode, "Postal Code") (If Applicable)
                @Html.TextBoxFor(m => m.Address.PostalCode, new { @class = "form-control" })
            </div>
        </div>

        <div class="row text-center">

            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.Address.Province) (Required)
                @Html.TextBoxFor(m => m.Address.Province, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address.Province, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row text-center">

            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.Address.City) (Required)
                @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address.City, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row text-center">
            <div class="form-group col-sm-8 col-sm-offset-2">
                @Html.LabelFor(m => m.Address.Country) (Required)
                @Html.TextBoxFor(m => m.Address.Country, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address.Country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row text-center">
            <h5>
                By registering, you agree to MyApps <a href="#">Terms Of Service</a>
                and <a href="#">Privacy Statement</a>.
            </h5>
            <button style="margin-top:15px;" class="btn btn-primary col-xs-4 col-md-4 col-xs-offset-4 col-md-offset-4" type="submit">
                Register
            </button>
        </div>
        <hr />
        <div class="row text-center">
            <div class="form-group col-sm-8 col-sm-offset-2">
                <h5>
                    Already Have An Account?
                </h5>
                <a asp-area="" asp-controller="Account" asp-action="SignIn" class="btn-link">Sign In Instead</a>
            </div>
        </div>

    </div>
}
